type League {
    id: ID!
    name: String!
    season: Int!
    segment: String,
    teams: [Team]!
}

type Team {
    id: ID!
    name: String!
    country: String!
    league: League
}

type Query {
    leagues: [League]!
}

input LeagueAdd {
    name: String!
    season: Int!
    segment: String
}

type Mutation {
    createLeague(leagueAdd: LeagueAdd!): League!
}